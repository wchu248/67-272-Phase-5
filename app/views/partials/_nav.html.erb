          <li><%= link_to "View Price Histories", item_prices_path %>
        <% end %>
        <li><%= link_to "View Profile", user_path(current_user.id) %></li>
        <li><%= link_to "Edit Account", edit_user_path(current_user.id) %></li>
        <li><%= link_to "Logout", logout_path %></li>
      <% elsif !logged_in? %>
        <li><%= link_to "Add School", new_school_path %></li>
        <li> <%= link_to "Create Account", new_user_path %>
        <li> <%= link_to "Login", login_path %> </li>
      <% end%>  
    </ul>
  </div>
