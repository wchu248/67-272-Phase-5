<p><u><b>Order Items:</b></u><br>

<% unless @order_items.empty? %>
  <table class="bordered highlight responsive-table">
    <thead>
      <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Subtotal</th>
        <th>Shipped On</th>
      </tr>
    </thead>
    <tbody>
      <% for i in @order_items %>
        <tr>
          <td><%= link_to i.item.name, item_path(i.item) %>
          <td><%= i.quantity %></td>
          <td><%= number_to_currency(i.subtotal) %> </td> 
          <% unless i.shipped_on.nil? %>
            <td><%= i.shipped_on.strftime("%b %-d, %Y") %></td>
          <% else %>
            <td>---</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  This order contains no items.
<% end %>

</p>