<p><u><b>Shipping Address:</b></u><br>
<% if current_user.role?(:admin) || current_user.role?(:manager) %>
  <%= link_to @order.school.name, school_path(@order.school) %><br>
<% else %>
  <%= @order.school.name %><br>
<% end %>
<%= @order.school.street_1 %><br>
<% unless @order.school.street_2.nil? %>
  <%= @order.school.street_2 %><br>
<% end %>
<%= @order.school.city %>, <%= @order.school.state %> <%= @order.school.zip %><br>
United States</p>