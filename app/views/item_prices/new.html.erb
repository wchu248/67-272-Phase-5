<h4><i class="medium material-icons">monetization_on</i> New Price</h4>

<div class="row">
	<%= simple_form_for(@item_price) do |f| %>

		<!-- Display error messages, if any -->
	  <% if @item_price.errors.any? %>
			<div id="error_explanation">
				<h6><%= pluralize(@item_price.errors.count, "error") %> prohibited this item from being saved:</h6>
				<% @item_price.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</div>
  	<% end %>

		<!-- Form for creating a new item price -->
		<div class="row">
			<div class="input-field col s8">
				<i class="material-icons prefix">info_outline</i>
				<%= f.label :item %><br></br>
    		<%= f.collection_select :item_id, Item.active.alphabetical.all, :id, :name %>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s8">
				<i class="material-icons prefix">attach_money</i>
				<%= f.label :price %>
    		<%= f.number_field :price %>
			</div>
    </div>
		<div class="row">
			<div class="input-field col s8">
				<i class="material-icons prefix">list</i>
				<%= f.label :category %><br></br>
				<%= f.select :category, ItemPrice::CATEGORIES %>
			</div>
    </div>
		<div class ="row">
			<div class="input-field col s8">
				<button class="btn waves-effect waves-light">
					<i class="material-icons right">send</i>
					<%= f.submit %>
				</button>
			</div>
		</div>
	<% end %>
</div>