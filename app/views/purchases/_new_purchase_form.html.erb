<%= simple_form_for @purchase, html: { :class => 'form-horizontal' }, remote: true do |f| %>

	<!-- Display error messages, if any -->
	<% if @purchase.errors.any? %>
		<div id="error_explanation">
			<h6><%= pluralize(@purchase.errors.count, "error") %> prohibited this purchase from being saved:</h6>
			<% @purchase.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</div>
	<% end %>

	<!-- Form for creating a new purchase -->
	<%= f.input :item_id, as: :hidden, input_html: { value: params[:item_id] } %>
	<div class="row">
		<div class="input-field col s6">
			<i class="material-icons prefix">equalizer</i>
			<%= f.label :quantity %>
			<%= f.number_field :quantity %>
		</div>
  </div>
	<div class ="row">
		<div class="input-field col s10">
			<button class="btn waves-effect waves-light">
				<%= f.submit %>
			</button>
			<button class="btn waves-effect waves-light white-text">
				<%= link_to 'Cancel', item_path(params[:item_id]) %>
			</button>
		</div>
	</div>
<% end %>